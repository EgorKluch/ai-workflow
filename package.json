{
  "name": "ping-mcp-server",
  "version": "1.0.0",
  "description": "Simple MCP server with ping tool",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test-dev": "NODE_OPTIONS=--experimental-vm-modules jest --watchAll",
    "start": "npm run build && node dist/index.js",
    "build:calc": "cd calculator && tsc",
    "calc": "npm run build:calc && node calculator/dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "flowmcp": "^2.1.1",
    "js-yaml": "^4.1.0",
    "commander": "^12.0.0",
    "mathjs": "^12.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "server",
    "ping",
    "modelcontextprotocol"
  ],
  "author": "",
  "license": "MIT"
